<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" />

    <!-- rounded corners -->
    <corners android:radius="10dp" />

    <!-- thin light border -->
    <stroke
        android:width="1dp"
        android:color="#E5E7EB" />

    <!-- optional padding inside (EditText also has padding attribute) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
