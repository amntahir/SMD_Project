<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".doc_upload">

    <!-- Content scroll for small screens -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Top row: back + title/subtitle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                >

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/chevron_left" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Document Intelligence"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyze your financial documents"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Security banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#F3F4F6"
                app:cardCornerRadius="16dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:srcCompat="@drawable/ic_shield_lock"
                       />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSecurityTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your documents are secure"
                            android:textColor="#111827"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvSecurityBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="All documents are processed with bank-grade encryption and automatically deleted after analysis."
                            android:textColor="#6B7280"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Upload Document -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Leading circle icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#1F4BFF10"
                        app:strokeColor="#1F4BFF20"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            app:srcCompat="@drawable/ic_upload"
                            />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUploadTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Your Document"
                            android:textColor="#111827"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvUploadSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take a photo or upload files from your device"
                            android:textColor="#6B7280"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Browse Bank Documents -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBrowse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#00B89418"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            app:srcCompat="@drawable/ic_search"
                            />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBrowseTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse Bank Documents"
                            android:textColor="#111827"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvBrowseSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Access pre-loaded documents from Pakistani banks"
                            android:textColor="#6B7280"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Supported Document Types -->
            <TextView
                android:id="@+id/tvSupportedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Supported Document Types"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="16sp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <!-- two-column clickable rows -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:columnCount="2"
                    android:rowCount="4">

                    <!-- each row item is its own clickable container -->
                    <LinearLayout
                        android:id="@+id/typeLoanApplications"
                        style="@style/ClickableTypeRow" >

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="8dp"
                            app:srcCompat="@drawable/ic_bullet_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loan Applications"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeCreditCardTerms"
                        style="@style/ClickableTypeRow">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="8dp"
                            app:srcCompat="@drawable/ic_bullet_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Card Terms"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeInsurancePolicies"
                        style="@style/ClickableTypeRow">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="8dp"
                            app:srcCompat="@drawable/ic_bullet_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insurance Policies"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeInvestmentPlans"
                        style="@style/ClickableTypeRow">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="8dp"
                            app:srcCompat="@drawable/ic_bullet_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Investment Plans"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeBankStatements"
                        style="@style/ClickableTypeRow">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="8dp"
                            app:srcCompat="@drawable/ic_bullet_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Statements"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeTermsConditions"
                        style="@style/ClickableTypeRow">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="8dp"
                            app:srcCompat="@drawable/ic_bullet_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms and conditions"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
