<?xml version="1.0" encoding="utf-8"?>
<!-- Layout: activity_eligibility_results.xml (UBL card removed) -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F7F8FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Appbar: Back + Title + Subtitle -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/chevron_left"
            android:contentDescription="Back"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#222222" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Eligibility Results"
            android:textSize="20sp"
            android:textColor="#111111"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Found matching products"
            android:textSize="12sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="@id/tvTitle"
            android:layout_marginTop="4dp" />

        <!-- Status Row (three rounded boxes) -->
        <LinearLayout
            android:id="@+id/statusRow"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- Approved -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardApproved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#E7F6EF"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvApprovedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                    <TextView
                        android:id="@+id/tvApprovedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved"
                        android:textSize="12sp"
                        android:textColor="#4F6D5C"
                        android:layout_marginTop="6dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Conditional -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardConditional"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFF6EB"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvConditionalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#D17B4E" />

                    <TextView
                        android:id="@+id/tvConditionalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conditional"
                        android:textSize="12sp"
                        android:textColor="#A05C40"
                        android:layout_marginTop="6dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Not Eligible -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNotEligible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFF0F0"
                app:cardElevation="0dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvNotEligibleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#C05050" />

                    <TextView
                        android:id="@+id/tvNotEligibleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Eligible"
                        android:textSize="12sp"
                        android:textColor="#9B6060"
                        android:layout_marginTop="6dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Category Tabs (All, Loans, Cards, Home, Insurance) -->
        <LinearLayout
            android:id="@+id/tabs"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/statusRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="All"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#111111"
                android:padding="6dp" />

            <TextView
                android:id="@+id/tabLoans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loans"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginStart="18dp" />

            <TextView
                android:id="@+id/tabCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cards"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginStart="18dp" />

            <TextView
                android:id="@+id/tabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginStart="18dp" />

            <TextView
                android:id="@+id/tabInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginStart="18dp" />

        </LinearLayout>

        <!-- First Offer Card (HBL) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOffer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#EAF7F0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tabs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Row: icon + title + bank badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconDollar1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_dollar"
                        android:contentDescription="icon"
                        android:background="@drawable/icon_circle_mint"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/offer1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HBL Personal Loan"
                            android:textStyle="bold"
                            android:textColor="#0E5E4A"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/offer1Sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pre-Approved"
                            android:textSize="12sp"
                            android:textColor="#2E7D32"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/badgeHBL"
                        android:layout_width="44dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:text="HBL"
                        android:textSize="12sp"
                        android:textColor="#0E5E4A"
                        android:background="@drawable/badge_rounded_mint" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@android:color/transparent" />

                <!-- Two column info row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/labelLoanAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loan Amount"
                            android:textColor="#388E3C"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/valueLoanAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PKR 500,000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/labelMonthly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Payment"
                            android:textColor="#6D6D6D"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/valueMonthly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PKR 11,890"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/labelInterest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interest Rate"
                            android:textColor="#388E3C"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/valueInterest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14.5%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/labelTenure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tenure"
                            android:textColor="#6D6D6D"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/valueTenure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 years"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Requirements list -->
                <TextView
                    android:id="@+id/tvRequirementsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirements:"
                    android:textSize="13sp"
                    android:textColor="#4B7B6A"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/req1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Salary certificate"
                        android:textSize="12sp"
                        android:textColor="#4B7B6A" />

                    <TextView
                        android:id="@+id/req2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Bank statements (3 months)"
                        android:textSize="12sp"
                        android:textColor="#4B7B6A"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/req3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• CNIC copy"
                        android:textSize="12sp"
                        android:textColor="#4B7B6A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Buttons row -->
                <LinearLayout
                    android:id="@+id/buttonsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnApplyNow1"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Apply Now"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:iconGravity="textStart"
                        android:insetLeft="8dp"
                        android:backgroundTint="#113F9C"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAskAI1"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="10dp"
                        android:text="Ask AI"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:backgroundTint="#FFFFFF"
                        app:strokeWidth="1dp"
                        android:strokeColor="#D0D0D0"
                        android:textColor="#222222"
                        app:cornerRadius="10dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second Offer Card (MCB) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOffer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#EDF8F3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/cardOffer1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconCard2"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/creditcard"
                        android:contentDescription="icon"
                        android:background="@drawable/icon_circle_mint"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/offer2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MCB Gold Credit Card"
                            android:textStyle="bold"
                            android:textColor="#0E5E4A"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/offer2Sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pre-Approved"
                            android:textSize="12sp"
                            android:textColor="#2E7D32"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/badgeMCB"
                        android:layout_width="44dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:text="MCB"
                        android:textSize="12sp"
                        android:textColor="#0E5E4A"
                        android:background="@drawable/badge_rounded_mint" />
                </LinearLayout>

                <!-- Info rows condensed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/offer2Label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Limit"
                            android:textColor="#2E7D32"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/offer2Value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PKR 200,000"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/offer2Label2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Annual Fee"
                            android:textColor="#2E7D32"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/offer2Value2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PKR 3,000"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/offer2ReqLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirements:"
                    android:textSize="13sp"
                    android:textColor="#4B7B6A"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/offer2req1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Minimum salary PKR 50,000"
                        android:textSize="12sp"
                        android:textColor="#4B7B6A" />

                    <TextView
                        android:id="@+id/offer2req2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Good credit history"
                        android:textSize="12sp"
                        android:textColor="#4B7B6A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnApplyNow2"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Apply Now"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:backgroundTint="#113F9C"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAskAI2"
                        android:layout_width="110dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="10dp"
                        android:text="Ask AI"
                        android:textAllCaps="false"
                        android:backgroundTint="#FFFFFF"
                        app:strokeWidth="1dp"
                        android:strokeColor="#D0D0D0"
                        android:textColor="#222222"
                        app:cornerRadius="10dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
