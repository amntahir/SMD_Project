<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".eligibility_4">

    <!--  Top bar  -->
    <LinearLayout
        android:id="@+id/topBarEligibility4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBackEligibility4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/chevron_left"
                android:contentDescription="@string/app_name"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleEligibility4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligibility Check"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/tvStepEligibility4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 4 of 4"
                    android:textColor="#6B7280"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!--  Progress bar  -->
        <ProgressBar
            android:id="@+id/progressEligibility4"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="100"
            android:progressTint="#1F4BFF"
            android:progressBackgroundTint="#E5E7EB"/>
    </LinearLayout>

    <!--  Content  -->
    <ScrollView
        android:id="@+id/scrollEligibility4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/topBarEligibility4"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonBar4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="120dp">

            <!--  Main card  -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLoanRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <!--  Icon  -->
                    <ImageView
                        android:id="@+id/iconLoanRequirements"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/loan"
                        app:tint="#1F4BFF"/>

                    <TextView
                        android:id="@+id/tvCardTitleEligibility4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Requirements"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvCardSubtitleEligibility4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What are you looking for?"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp"/>

                    <!--  Desired Loan Amount  -->
                    <TextView
                        android:id="@+id/tvLoanAmountLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desired Loan Amount (PKR)"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLoanAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="How much do you need?"
                        android:textColorHint="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/spLoanAmount"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Loan Purpose  -->
                    <TextView
                        android:id="@+id/tvLoanPurposeLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loan Purpose"
                        android:textColor="#111827"
                        android:layout_marginTop="14dp"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLoanPurpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="What will you use the loan for?"
                        android:textColorHint="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/spLoanPurpose"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Preferred Tenure  -->
                    <TextView
                        android:id="@+id/tvLoanTenureLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preferred Tenure (Months)"
                        android:textColor="#111827"
                        android:layout_marginTop="14dp"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLoanTenure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="How long do you need to repay?"
                        android:textColorHint="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/spLoanTenure"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="none"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Consent checkbox  -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="14dp"
                        app:strokeWidth="1dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start|center_vertical">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkboxConsent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consent for Credit Check"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="I authorize banks to check my credit history to provide accurate eligibility results. This will not affect my credit score."
                        android:textColor="#111827"
                        android:textSize="14sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!--  Bottom continue button  -->
    <LinearLayout
        android:id="@+id/bottomButtonBar4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPrevious4"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#6B7280"
            android:drawableStart="@drawable/chevron_left"
            android:paddingStart="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnContinue4"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Continue"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#1F4BFF"
            android:paddingEnd="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
