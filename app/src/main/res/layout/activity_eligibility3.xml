<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".eligibility_3">

    <!--  Top bar  -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/chevron_left"
                android:contentDescription="@string/app_name"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligibility Check"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111827"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 3 of 4"
                    android:textColor="#6B7280"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!--  Progress bar  -->
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="6dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="75"
            android:progressTint="#1F4BFF"
            android:progressBackgroundTint="#E5E7EB"/>
    </LinearLayout>

    <!--  Scrollable content  -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonBar3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="120dp">

            <!--  Main card  -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <!--  Icon and header  -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/creditcard"
                        app:tint="#1F4BFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit History"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your current financial commitments"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp"/>

                    <!--  Existing Loans  -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Existing Loans"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Do you have any existing loans?"
                        android:textColorHint="#6B7280">
                        <AutoCompleteTextView
                            android:id="@+id/existingLoansDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Credit Cards  -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Credit Cards"
                        android:textColor="#111827"
                        android:layout_marginTop="14dp"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="How many credit cards do you have?"
                        android:textColorHint="#6B7280">
                        <AutoCompleteTextView
                            android:id="@+id/creditCardsDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Credit Score Knowledge  -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Credit Score Knowledge"
                        android:textColor="#111827"
                        android:layout_marginTop="14dp"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Do you know your credit score?"
                        android:textColorHint="#6B7280">
                        <AutoCompleteTextView
                            android:id="@+id/creditScoreDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="#DFFFE0"
                        app:strokeWidth="1dp"
                        android:backgroundTint="#E6FFF0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start|center_vertical"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/info"
                                android:contentDescription="Info icon"
                                app:tint="#1F8A70"
                                android:layout_marginRight="5dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Credit Score Tip: Don't worry if you don't know your credit score. We can help you check it for free as part of your application."
                                android:textColor="#1F8A70"
                                android:textSize="14sp"
                                android:paddingStart="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!--  Bottom Continue Button  -->
    <LinearLayout
        android:id="@+id/bottomButtonBar3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPrevious3"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#6B7280"
            android:drawableStart="@drawable/chevron_left"
            android:paddingStart="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnContinue3"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Continue"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#1F4BFF"
            android:paddingEnd="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
