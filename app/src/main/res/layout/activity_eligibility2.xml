<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".eligibility_2">

    <!--  Top bar  -->
    <LinearLayout
        android:id="@+id/topBarEligibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButtonEligibility"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/chevron_left"
                android:contentDescription="@string/app_name"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleEligibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligibility Check"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/stepIndicatorEligibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 2 of 4"
                    android:textColor="#6B7280"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!--  Progress bar  -->
        <ProgressBar
            android:id="@+id/progressEligibility"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="50"
            android:progressTint="#1F4BFF"
            android:progressBackgroundTint="#E5E7EB"/>
    </LinearLayout>

    <!--  Content  -->
    <ScrollView
        android:id="@+id/scrollEligibility"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/topBarEligibility"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="120dp">

            <!--  Main card  -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/incomeExpenseCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <!--  Icon  -->
                    <ImageView
                        android:id="@+id/incomeIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/money"
                        app:tint="#1F4BFF"/>

                    <TextView
                        android:id="@+id/incomeCardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income and expenses"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/incomeCardSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help us understand your finances"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp"/>

                    <!--  Monthly Income  -->
                    <TextView
                        android:id="@+id/labelMonthlyIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monthly Income (PKR)"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/monthlyIncomeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Select monthly income"
                        android:textColorHint="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/monthlyIncomeDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Other Income  -->
                    <TextView
                        android:id="@+id/labelOtherIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other Income (PKR)"
                        android:textColor="#111827"
                        android:layout_marginTop="14dp"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/otherIncomeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Any additional income"
                        android:textColorHint="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/otherIncomeDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Monthly Expenses  -->
                    <TextView
                        android:id="@+id/labelMonthlyExpenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monthly Expenses (PKR)"
                        android:textColor="#111827"
                        android:layout_marginTop="14dp"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/monthlyExpensesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Total monthly expenses"
                        android:textColorHint="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/monthlyExpensesDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--  Rent/EMI  -->
                    <TextView
                        android:id="@+id/labelRentEmi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rent/EMI (PKR)"
                        android:textColor="#111827"
                        android:layout_marginTop="14dp"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rentEmiLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Monthly rent or EMI"
                        android:textColorHint="#6B7280">

                        <AutoCompleteTextView
                            android:id="@+id/rentEmiDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="32dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!--  Bottom continue button  -->
    <LinearLayout
        android:id="@+id/bottomButtonBar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="2"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPrevious2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#6B7280"
            android:drawableStart="@drawable/chevron_left"
            android:paddingStart="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnContinue2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Continue"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#1F4BFF"
            android:paddingEnd="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
